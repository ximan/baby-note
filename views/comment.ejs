<% if (user) { %>
<hr />
<form method="post">
    <div class="row">
        <div class="col-xs-6">
            <p>
                <input type="date" name="date" class="form-control" placeholder="日期" value="<%=date%>">
            </p>
        </div>
        <div class="col-xs-6">
            <p>
                <input type="time" name="time" class="form-control" placeholder="时间" value="<%=time%>">
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-6">
            <select class="form-control" name="content">
                <option value="吃奶">吃奶</option>
                <option value="拉粑粑">拉粑粑</option>
            </select>
        </div>
        <div class="col-xs-6">
            <input type="submit" class="btn btn-default" value="新增"/>
        </div>
    </div>
</form>
<% } %>
<%if(comments){%>
<hr />
<%if(comments.length > 0){%>
<table class="table table-striped table-bordered">
<% comments.forEach(function (comment, index) { %>
    <tr>
        <td><%= comment.time %></td>
        <td class="text-center"><%- comment.content %></td>
        <td class="text-right">
            <a class="btn btn-primary btn-xs" href="/editComment/<%= comment._id %>">编辑</a>
            <a class="btn btn-primary btn-xs" href="/removeComment/<%= comment._id %>">删除</a>
        </td>
    </tr>
<% }) %>
</table>
<%}%>
<%}%>